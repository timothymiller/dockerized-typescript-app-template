{
  "name": "typescript-app",
  "version": "0.1.3",
  "main": "app.ts",
  "repository": "https://github.com/timothymiller/dockerized-typescript-app-template.git",
  "author": "tim.miller@preparesoftware.com",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
    "compile": "tsc -p . && rollup -c",
    "build": "docker build -t timothyjmiller/typescript-app:latest .",
    "build:all": "docker buildx build --platform linux/arm/v6,linux/arm/v7,linux/arm64/v8,linux/amd64 --tag timothyjmiller/typescript-app:latest ."
  },
  "dependencies": {
  },
  "devDependencies": {
    "@rollup/plugin-strip": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-visualizer": "^4.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
